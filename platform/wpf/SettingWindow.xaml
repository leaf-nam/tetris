<Window x:Class="wpf.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TETRISSEN SETTING"
        Width="800"
        Height="800"
        Background="{DynamicResource Background}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- 게임 버튼 스타일 -->
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Background}"/>
            <Setter Property="Background" Value="{DynamicResource Foreground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="30">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>

                        <!-- 마우스 효과 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource Comment}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource Orange}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                    Property="Opacity"
                                    Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="10">

        <!-- 열 2개 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <!-- 행 3개 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <!-- 상단 타이틀 -->
        <Border Grid.Row="0"
          Grid.Column="0"
          Grid.ColumnSpan="1"
          Margin="5"
          BorderThickness="2">
            <Canvas x:Name="CanvasTitle"/>
        </Border>

        <!-- 게임 제목-->
            <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                Text="게임 설정"
                Foreground="{DynamicResource Foreground}"
                FontSize="50"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <!-- 옵션 영역 -->
            <StackPanel Grid.Row="1" 
                        Grid.Column="1" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top" >

            <!-- 테마 선택 -->
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="테마 선택" Foreground="{DynamicResource Foreground}" HorizontalAlignment="Left" FontSize="20" Margin="0,0,0,10"/>
                <ComboBox x:Name="ThemeComboBox" Width="250" Height="40" FontSize="20" 
                    SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Dracula" Tag="/render/theme/DraculaTheme.xaml" IsSelected="True"/>
                    <ComboBoxItem Content="Monokai" Tag="/render/theme/MonokaiTheme.xaml"/>
                    <ComboBoxItem Content="Nord" Tag="/render/theme/NordTheme.xaml"/>
                    <ComboBoxItem Content="SolarizedDark" Tag="/render/theme/SolarizedDarkTheme.xaml"/>
                </ComboBox>
            </StackPanel>

            <!-- 쉐도우 효과 -->
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,10">
                <TextBlock Text="블록 그림자" Foreground="{DynamicResource Foreground}" HorizontalAlignment="Left" FontSize="20" Margin="0,0,0,10"/>
                <ComboBox x:Name="ShadowComboBox" Width="250" Height="40" FontSize="20"
                    SelectionChanged="ShadowComboBox_SelectionChanged">
                    <ComboBoxItem Content="켜기" Tag="on"/>
                    <ComboBoxItem Content="끄기" Tag="off"/>
                </ComboBox>
            </StackPanel>

            <!-- 하단 버튼 -->
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" >
                <Button Content="저장" Style="{StaticResource GameButtonStyle}" Click="SaveSettings_Click" Margin="0 0 10 0"/>
                <Button Content="취소" Style="{StaticResource GameButtonStyle}" Click="CancelSettings_Click" Margin="0 0 10 0"/>
            </StackPanel>


        </StackPanel>


        <Border Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Margin="5"
                BorderThickness="2">
            <Canvas x:Name="CanvasLeft"/>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="1"
                Margin="5"
                BorderThickness="2">  
            <Canvas x:Name="CanvasRight"/>
        </Border>
    </Grid>
</Window>