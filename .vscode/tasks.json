{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tetris",
            "type": "shell",
            "command": "g++",
            "args": [
                "source/tetris/tetris.cpp",
                "source/tetromino/tetromino.cpp",
                "source/tetromino/tetromino_shape.cpp",
                "source/board/board.cpp",
                "source/input/console_input.cpp",
                "source/game_rule/game_rule.cpp",
                "-Iinclude",
                "-std=c++17",
                "-g",
                "-o",
                "tetris"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}